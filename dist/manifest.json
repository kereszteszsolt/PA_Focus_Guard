{
  "name": "Focus Guard",
  "version": "1.0.0",
  "description": "Focus Guard for Google Chrome",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "storage",
    "tabs",
    "scripting"
  ],
  "icons": { "128": "assets/icons/icon-80.png" },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Focus Guard"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "manifest_version": 3
}

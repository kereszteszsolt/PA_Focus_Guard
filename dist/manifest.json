{
  "name": "Focus Guard",
  "version": "1.0.1",
  "description": "Focus Guard for Google Chrome",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "icons": { "128": "icon-80.png" },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Guard"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "manifest_version": 3
}

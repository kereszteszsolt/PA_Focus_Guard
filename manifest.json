{
  "name": "Focus Guard 2",
  "version": "2.0.0",
  "description": "Focus Guard reminds you to focus when you try to access distracting websites by redirecting you to the Focus page.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "icons": {
    "128": "src/assets/icons/kzs-focus.png"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Guard"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "manifest_version": 3
}
